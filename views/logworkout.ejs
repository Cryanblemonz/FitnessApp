<%- include('header') %>
<%- include('navbar') %>
<div class="row">
        <div class="col-md-9 log-workout-div">
                <h1 class="page-headings"> üèãÔ∏è‚Äç‚ôÄÔ∏è Lets track some gains üèãÔ∏è‚Äç‚ôÇÔ∏è</h1>
                <h2> Choose a Workout ‚Üí</h2>


                <div id="enter-workout">
                        <% if (chosenWorkout){ %>
                        <h4><%=chosenWorkout.name %></h4>
                                <div class="row">
                                        <div class="col-md-4">
                                                <% for(exercise in chosenWorkout){ %>
                                                        <% if(exercise.startsWith('exercise') && chosenWorkout[exercise]){ %>
                                                            <p><%= chosenWorkout[exercise] %></p>
                                                        <% } %>
                                                </div>
                                        </div>
                                <% } %>       
                        <% } %> 

                </div>
        </div>
        <div class="col-md-3" id="saved-workouts2">
                        <h3> Your Workouts</h3>
                        <hr>
                        <% for (i=0; i < workouts.length; i++){ %>
                            <div class="dashboard-workout">
                                <h4><%= workouts[i].name %></h4>
                                <ul class="exercise-list">
                                    <% for(exercise in workouts[i]){ %>
                                        <% if(exercise.startsWith('exercise') && workouts[i][exercise]){ %>
                                            <li><%= workouts[i][exercise] %></li>
                                        <% } %>
                                    <% } %>
                                </ul>
                                <form action="/chosenWorkout" method="post">
                                        <input type="hidden" name="workoutId" value="<%= workouts[i]._id %>">
                                        <button class="btn btn-dark start-workout-button" type="submit">Log Workout</button><br>
                                </form>

                                      
                                <hr>
                            </div>
                        <% } %>
                        <a href="/workouts"><button class="btn btn-primary">Create New Workout</button></a> 
        </div>
</div>




        







<%- include ('footer') %>